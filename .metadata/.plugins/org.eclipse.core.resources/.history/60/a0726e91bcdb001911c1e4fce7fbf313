package day26_;

public class arrayWaruuIncrementValues {
	public static void main (String[] args) {
		
		int[] nums= {1,2,3,4,5,6,7,8,9};
		
		int odd=nums[0];
		int even=nums[0];
       for(int n:nums) {
    	   System.out.print(n+" ");
       }
       System.out.println(" ");
       
       //using a loop write some code to do following
       //if value even double and assign back
       // if value is odd triple it and assign back
       
       for(int i=0; i<nums.length; i++) {
    	   //System.out.println(nums[i]);
    	   
    	   if(nums[i]%2==0) {
    		   nums[i]=nums[i]*2;
    	   }
    	   for(int n:nums) {
        	   System.out.print(n+" ");
           }
    	   
    	   
       }
       
		
		
		
	}
}
