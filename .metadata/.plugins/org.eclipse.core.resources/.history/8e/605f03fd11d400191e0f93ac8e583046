package day17_Strings;

import java.util.Scanner;

public class Strings02 {
	public static void main(String[] args)  {
		// create 1 string variabel
		// if first and last chars are same pritn "firstsame"
		//if second amd second from the last are same -print "seconds same"
		// scanner with next() method

		Scanner input= new Scanner (System.in);
	System.out.println("write a word ");
	String word= input.next();
	
	// test below condition only if word has at least 4 chars
	// if less 4 chars say ERROR
	
	if(word.length()>=4) {
		System.out.println("error ");
		
	}
		if(word.charAt(0)==word.charAt(word.length()-1)){
			System.out.println("firsts sama ");
			
		}else if(word.charAt(1)==word.charAt(word.length()-2)) {
			System.out.println("seconds same ");
		}else {
			System.out.println("all different ");
		}
		
		 
		 
		 
		
		
		
		
		
		
		
		
		
		
		
		
	}
}
