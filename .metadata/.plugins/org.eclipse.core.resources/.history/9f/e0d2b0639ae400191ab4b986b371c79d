	private static int sumList(List<Integer> nums) {
	// TODO Auto-generated method stub
	return 0;
}
	public static int sum(ArrayList<Integer>nums) {
	
		int sum=0;
		for(int n:nums) {
			sum+=n;
		}
	for (int i = 0; i < nums.size(); i++) {
		    sum+=nums.get(i);
		
	}
	
		
		return sum;
	}
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}

